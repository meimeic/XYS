<?xml version="1.0" encoding="utf-8" ?>
<lisConfig>
  <log4net>
    <logger name="LisReport">
      <appender-ref ref="LisReportAppender" />
    </logger>
    <logger name="LisReportHandle">
      <appender-ref ref="LisReportHandleAppender" />
    </logger>
    <logger name="LisReportMongo">
      <appender-ref ref="LisReportMongoAppender" />
    </logger>
    <!--定义输出到文件中-->
    <appender name="LisReportHandleAppender" type="log4net.Appender.RollingFileAppender">
      <!--定义文件存放位置-->
      <param name="File" value="D:\\log\\report\\lis\\handle\\"/>
      <param name="AppendToFile" value="true"/>
      <param name="maxSizeRollBackups" value="10"/>
      <param name="maximumFileSize" value="10MB"/>
      <param name="staticLogFileName" value="false"/>
      <param name="DatePattern" value="yyyy-MM-dd&quot;.log&quot;"/>
      <param name="RollingStyle" value="Composite" />
      <param name="staticLogFileName" value="false"/>
      <layout type="log4net.Layout.PatternLayout">
        <!--
        <param name="Header" value="[Header]\r\n"/>
        <param name="Footer" value="[Footer]\r\n"/>
        -->
        <!--每条日志末尾的文字说明-->
        <!--输出格式-->
        <!--样例：2008-03-26 13:42:32,111 [10] INFO  Log4NetDemo.MainClass [(null)] - info-->
        <param name="conversionPattern" value="%date [%thread] %-5level %-20c [%M]  - %message%n"/>
      </layout>
      <filter type="log4net.Filter.LevelRangeFilter">
        <param name="LevelMin" value="INFO" />
        <param name="LevelMax" value="ERROR" />
      </filter>
    </appender>
    <appender name="LisReportAppender" type="log4net.Appender.RollingFileAppender">
      <!--定义文件存放位置-->
      <param name="File" value="D:\\log\\report\\lis\\"/>
      <param name="AppendToFile" value="true"/>
      <param name="maxSizeRollBackups" value="10"/>
      <param name="maximumFileSize" value="10MB"/>
      <param name="staticLogFileName" value="false"/>
      <param name="DatePattern" value="yyyy-MM-dd&quot;.log&quot;"/>
      <param name="RollingStyle" value="Composite" />
      <param name="staticLogFileName" value="false"/>
      <layout type="log4net.Layout.PatternLayout">
        <!--
        <param name="Header" value="[Header]\r\n"/>
        <param name="Footer" value="[Footer]\r\n"/>
        -->
        <!--每条日志末尾的文字说明-->
        <!--输出格式-->
        <!--样例：2008-03-26 13:42:32,111 [10] INFO  Log4NetDemo.MainClass [(null)] - info-->
        <param name="conversionPattern" value="%date [%thread] %-5level %-20c [%M]  - %message%n"/>
      </layout>
      <filter type="log4net.Filter.LevelRangeFilter">
        <param name="LevelMin" value="INFO" />
        <param name="LevelMax" value="ERROR" />
      </filter>
    </appender>
    <appender name="LisReportMongoAppender" type="log4net.Appender.RollingFileAppender">
      <!--定义文件存放位置-->
      <param name="File" value="D:\\log\\report\\lis\\mongo\\"/>
      <param name="AppendToFile" value="true"/>
      <param name="maxSizeRollBackups" value="10"/>
      <param name="maximumFileSize" value="10MB"/>
      <param name="staticLogFileName" value="false"/>
      <param name="DatePattern" value="yyyy-MM-dd&quot;.log&quot;"/>
      <param name="RollingStyle" value="Composite" />
      <param name="staticLogFileName" value="false"/>
      <layout type="log4net.Layout.PatternLayout">
        <!--
        <param name="Header" value="[Header]\r\n"/>
